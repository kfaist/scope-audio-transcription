{
  "name": "scope-audio-transcription",
  "version": "0.1.0",
  "description": "Real-time audio transcription for voice-controlled video generation",
  "author": "Krista Faist",
  "repository": "https://github.com/kfaist/scope-audio-transcription",
  "license": "MIT",
  "keywords": [
    "audio",
    "transcription",
    "whisper",
    "voice-control",
    "real-time",
    "interactive"
  ],
  "dependencies": {
    "torch": ">=2.0.0",
    "openai-whisper": ">=20231117",
    "nltk": ">=3.8",
    "spacy": ">=3.7",
    "numpy": ">=1.24"
  },
  "scope_version": ">=0.1.0",
  "entry_point": "scope_audio_transcription.plugin:create_plugin",
  "config_schema": {
    "model_size": {
      "type": "string",
      "default": "base.en",
      "enum": ["tiny.en", "base.en", "small.en", "medium.en", "large"],
      "description": "Whisper model size (larger = more accurate but slower)"
    }
  }
}
